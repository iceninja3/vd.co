#list {
    position: relative; /* Allow normal document flow */
    margin: auto; /* Centering, if needed */
    padding: 20px; /* Add spacing inside the element */
    overflow: auto; /* Allow internal scrolling if necessary */
    font-size: 16px;
}



 a{
    /*color: rgb(230, 14, 108);*/
    color: white;
    color: #1E90FF;
    /* color: #666666; */
    text-decoration: underline; /* Ensure the text is underlined */
    text-decoration-thickness: 1px; /* Adjust the thickness of the underline */
    text-underline-offset: 4px; /* Adjust the gap between the text and the underline */
    transition: color 0.3s; /* Optional: smooth color transition on hover */

} 

a:visited {
    color: #8A2BE2;
}

a:hover{
    color: rgb(230, 14, 108);
    color: #FFA500;
}


#socials{
    color: rgb(230, 14, 108);
}

#socials:hover{
    color: #0B6F9D;
}





i{
font-size: 2em;
