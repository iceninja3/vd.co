.center {
    position: fixed;
    left: 50%;
    top: 40%;
    transform: translate(-50%, -50%);
}

body {
    /*font-family: Helvetica, sans-serif;*/
    font-family: Roboto;
    font-size: 18px;
    overflow: auto; /* Ensure scrolling works */
    /*background-color: black;*/
    background-color:#131415;
    color: white;
    margin: 0; /* Set margin to 0 to avoid layout issues */
}

/* #list{
